include ../../layouts/mini_vertical_beef_list.jade

mixin category-browser-section(data)
    +section('BROWSE', 'CATEGORIES', 'fa-clock')(class="category-browser-section beef-category-music")
        div.category-browser-header
            div.header-menu
                ul
                    li.category-tech
                        a(href="#") Tech
                    li.category-sports
                        a(href="#") Sports
                    li.category-music
                        a(href="#") Music
            div.header-title
                h2.category-header-title MUSIC.
        div.row.beef-category-music
            div.col-md-6
                 +medium-beef-thumbnail(data[0].title, data[0].image_url, data[0].category, data[0]._id, data[0].event_date)(class="beef-category-#{data[0].category.toLowerCase()}", beef_thumbnail_class='hide-category large')
            div.col-md-6
                - var sliced_data = data.slice(1, 4)
                +mini-vertical-beef(sliced_data)