//include ../../layouts/beef_thumbnail.jade

mixin category-browser-display()
    div.row.beef-category-browser#beef_category_browser_display
        each thumbnail_data in category_event_data
            div.col-lg-4.col-md-6.col-xs-4
                +medium-beef-thumbnail(thumbnail_data, "events", "c_fill,g_face,h_215,w_350")(class="beef-category-#{thumbnail_data.categories[0].name.toLowerCase()}")

+category-browser-display()
+medium-beef-thumbnail(data, data_type, image_resize_params)