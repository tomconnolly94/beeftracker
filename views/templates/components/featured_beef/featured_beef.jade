mixin featured-beef-section(data, data_type, image_resize_params)
    +section('F', 'eatured', 'fa fa-fire')(class="categories-browser-section")
        div.row.featured-beefs-section
            div.primary-featured-beef
                 //+medium-beef-thumbnail(data[0].title, file_server_url_prefix + data_type + data[0].img_title_fullsize, data[0].category, data[0]._id, data[0].event_date)(class="beef-category-#{data[0].categories[0].name.toLowerCase()}", beef_thumbnail_class='x-large')
                 
                 +medium-beef-thumbnail(data[0], data_type, "c_fill,g_face,h_450,w_710")(class="beef-category-#{data[0].categories[0].name.toLowerCase()}", beef_thumbnail_class='x-large')
            div.secondary-featured-beefs
                div.row
                    div.secondary-featured-beef
                        +medium-beef-thumbnail(data[1], data_type, image_resize_params)(class="beef-category-#{data[1].categories[0].name.toLowerCase()}")
                    div.secondary-featured-beef
                        +medium-beef-thumbnail(data[2], data_type, image_resize_params)(class="beef-category-#{data[2].categories[0].name.toLowerCase()}")
