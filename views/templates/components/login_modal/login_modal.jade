include ../../layouts/modal.jade

mixin login-modal()
    +modal('Login', 'login.php', false)(id="login_modal", large_modal=true)
        div.row
            div.col-md-12.text-right
                p
                    | Don't have an account?&nbsp;
                    a(href="register.html") Register Now
        div.row(style="padding-top: 20px")
            div.col-md-6
                h3 Login via
                div.fb-login-button(data-max-rows="1", data-size="large", data-button-type="login_with", data-show-face="false", data-auto-logout-link="false", data-use-continue-as="false")
            div.col-md-6
                h3 Login using your Beeftracker Account
                form#login_form
                    div.form-row
                        div.form-group.col-md-12
                            label(for="login_email") Email
                            input(type="email").form-control#login_email
                    div.form-row
                        div.form-group.col-md-12
                            label(for="login_password") Password
                            input(type="password").form-control#login_password
                    div.form-row
                        div.form-group.col-md-12
                            button(type="submit").btn.btn-primary.float-right Login
                    div.form-row
                        div.form-group.col-md-12
                            p
                                | Forgotten password?&nbsp;
                                a(href="#") Reset here

        append scripts
            script(src="/component_controllers/login_modal/login_modal_controller.js" async)