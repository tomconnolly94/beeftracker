mixin related-beefs(related_events, data_type, image_resize_params)

    - if(image_resize_params){
    -   var split_server_url_prefix = file_server_url_prefix.split("/");
    -   split_server_url_prefix.splice(split_server_url_prefix.length-1, 0, image_resize_params);
    -   var server_url_prefix_with_image_formatting = split_server_url_prefix.join("/");
    - }
    
    div.rounded-mini-thumbs.related-beefs
        h4 Related Beef
        ul
            each related_event in related_events
                li
                    a(href="/beef/#{related_event.beef_chain_ids[0]._id}/#{related_event._id}")
                        img(src=server_url_prefix_with_image_formatting + "/" + data_type + "/" + related_event.img_title_fullsize)
                        div    
                            p #{related_event.title.slice(0,20)}
                            p #{related_event.aggressors[0].name.split(" ")[related_event.aggressors[0].name.split(" ").length-1]} v. #{related_event.targets[0].name.split(" ")[related_event.targets[0].name.split(" ").length-1]}