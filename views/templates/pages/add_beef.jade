extends ../layouts/layout.jade
include ../components/trending_beef/trending_beef.jade
include ../components/upload_gallery_item_modal/upload_gallery_item_modal.jade
include ../components/select_actor_modal/select_actor_modal.jade
include ../components/add_actor_modal/add_actor_modal.jade
include ../components/gallery_manager/gallery_manager.jade

append scripts
    script.
        $(function() {
            $('#beef_category').select2({
                placeholder: 'Select a Beef Category',
                theme: 'classic',
                width: "100%"
            });

            $('#beef_tags').select2({
                //placeholder: 'Type in beef tags',
                theme: 'classic',
                tags: true,
                tokenSeparators: [',', ' '],
                width: "100%"
            });

            $('#beef_content_summernote').summernote({
                tabsize: 2,
                height: 300,
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', []],
                    ['color', []],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['height', []]
                ]
            });
        });
    +upload-gallery-item-modal-js()
    +select-actor-modal-js()
    +add-actor-modal-js()

    script(src="/bower_components/select2/dist/js/select2.full.js")
    script(src="/modules/summernote/dist/summernote-lite.js")
    script(src="/bower_components/smartwizard/dist/js/jquery.smartWizard.js")


append body
    div.bt-content
        +add-actor-modal()
        +upload-gallery-item-modal()
        +select-actor-modal()
        section
            div.row.title
                h2.col-10
                    | Add
                    span
                        | Beef
                span.col-2.icon.fas-plus
            div(style="padding-top: 20px;")
                form
                    div.row
                        div.col-12
                            div.button-group.float-right
                                a(href="#").btn.btn-secondary Cancel
                                button(type="submit").btn.btn-primary Submit
                    div.row.versus-panel
                        div.col-5.beefer
                            div
                                h4#beefer_name &nbsp;
                                a(href="#", data-toggle="modal", data-target="#selector_actor_modal", id="select_actor_beefer").selector
                                    img(src="", style="display:none;").actor-avatar
                                    i.fas.fa-plus
                        div.col-2.versus
                            h4 VS.
                        div.col-5.beefee
                            div
                                h4#beefee_name &nbsp;
                                a(href="#", data-toggle="modal", data-target="#selector_actor_modal", id="select_actor_beefee").selector
                                    img(src="", style="display:none;").actor-avatar
                                    i.fas.fa-plus
                        //div.col-5.beefee
                            div
                                h4 Obama
                                a(href="actor.html").selector
                                    img(src="http://cdn.edgecast.steamstatic.com/steamcommunity/public/images/avatars/64/64e8917b85a0f5e20565651119c60f3d8d363898_full.jpg").actor-avatar
                    div.row
                        div.col-12
                            div.form-row
                                div.form-group.col-md-6
                                    label(for="beef_title") Title
                                    input(type="text").form-control#beef_title
                                 div.form-group.col-md-6
                                    label(for="beef_date") Date
                                    input(type="date").form-control#beef_date
                            div.form-row
                                div.form-group.col-md-6
                                    label(for="beef_category") Category
                                    select#beef_category.form-control(name="beef_category")
                                        option Cat one
                                div.form-group.col-md-6
                                    label(for="beef_tags") Tags
                                    select#beef_tags.form-control(name="beef_tags", multiple="multiple")
                                    
                            div.form-row
                                div.form-group.col-md-12
                                    label(for="beef_content_summernote") What happened?
                                    textarea.form-control#beef_content_summernote
                                    
                            div.form-row
                                div.form-group.col-md-12
                                    h2 Gallery
                            div.row.gallery-manager#gallery_manager
                                +gallery-manager()