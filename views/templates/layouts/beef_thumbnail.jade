mixin medium-beef-thumbnail(title, image, cat_name, beef_id, event_date)
    a(href="/beef/#{beef_id}", class!=attributes.class, class!=attributes.beef_thumbnail_class)
        div.beef-thumbnail(class!=attributes.beef_thumbnail_class)
            div.info-overlay
                div.header-panel
                    span.category-name= cat_name
                div.footer-panel
                    //- div.footer-panel-bg &nbsp;
                    div.beef-details
                        h4= title
                        span.date= event_date
                    div.beefometer-container
                        div.beefometer.small.four-beefs
            img(src=image)


