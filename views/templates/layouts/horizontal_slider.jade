mixin horizontal-slider-js(slider_id)
    script.
        $(function() {
            var swiper = new Swiper('##{slider_id}', {
                slidesPerView: 3,
                spaceBetween: 30,
                slidesPerGroup: 3,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                breakpoints: {
                    480: {
                        slidesPerView: 1,
                        slidesPerGroup: 1,
                        spaceBetween: 20,
                    },
                    992: {
                        slidesPerView: 2,
                        spaceBetween: 30,
                        slidesPerGroup: 2,
                    }
                }
            });
        });

mixin horizontal-slider(id, data)
    div.swiper-container(id=id)
        div.swiper-wrapper
            each thumbnail_data in data
                div.swiper-slide
                    +medium-beef-thumbnail(thumbnail_data.title, thumbnail_data.image_url, thumbnail_data.category, thumbnail_data._id, thumbnail_data.event_date)(class="beef-category-#{thumbnail_data.category.toLowerCase()}")
        div.swiper-pagination
        div.swiper-button-prev
            span.fas.fa-chevron-left
        div.swiper-button-next
            span.fas.fa-chevron-right