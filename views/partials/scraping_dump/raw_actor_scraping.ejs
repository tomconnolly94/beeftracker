<html>
    <head>
    
    </head>

    <body>
    
    
    
        <div id="scraping_options" ng-show="scrape_result_type == 'options'">

            <div ng-repeat="scraping_option in scraping_options" style="color:#FFFFFF;">                                    
                <label><input type="radio" name="scraping_options" ng-value=scraping_option ng-model="scraping_options_conf.conf"/>{{scraping_option}}</label>
            </div>

            <div class="row" style="padding:20px;">

                <div class="col-sm-4"></div>

                <div class="col-sm-2">
                    <input type="submit" value="Scrape" style="padding:10px;width:100%;height:100%;text-align:center;" ng-click="scrape_actor(scraping_options_conf.conf, scraping_options_conf.event_id)">
                </div>

                <div class="col-sm-4"></div>
            </div>

        </div>
        <div class="row" ng-show="scrape_result_type == 'data'">

            <div class="row">
                <h2 style="margin:0px 40px;"> Interpretation </h2>

                <div class="col-xs-2"></div>

                <div id="data_form" class="col-xs-8">

                    <div id="stage_name" class="row">
                        <label class="col-xs-4"> Stage Name </label>
                        <input type="text" class="col-xs-8" ng-model="scrape_result.stage_name"/>
                    </div>

                    <div id="birth_name" class="row">
                        <label class="col-xs-4"> Birth Name </label>
                        <input type="text" class="col-xs-8" ng-model="scrape_result.birth_name"/>
                    </div>

                    <div id="nicknames" class="row">
                        <label class="col-xs-4"> Nicknames </label>
                        <div class="col-xs-8 row" style="margin:0px 0px 5px 0px;padding:0px;">
                            <input type="text" class="col-xs-12" ng-model="nickname" ng-repeat="nickname in scrape_result.nicknames"/>
                        </div>
                    </div>

                    <div id="d_o_b" class="row">
                        <label class="col-xs-4"> Date of Birth </label>
                        <input type="text" class="col-xs-8" ng-model="scrape_result.d_o_b"/>
                    </div>

                    <div id="occupations" class="row">
                        <label class="col-xs-4"> Occupations </label>
                        <div class="col-xs-8 row" style="margin:0px 0px 5px 0px;padding:0px;">
                            <input type="text" class="col-xs-12" ng-model="occupation" ng-repeat="occupation in scrape_result.occupations"/>
                        </div>
                    </div>

                    <div id="bio" class="row">
                        <label class="col-xs-4"> Bio </label>
                        <textarea type="text" class="col-xs-8" ng-model="scrape_result.bio" rows="4" style="color:#000000"></textarea>
                    </div>

                    <div id="achievements" class="row">
                        <label class="col-xs-4"> Achievements </label>
                        <div class="col-xs-8 row" style="margin:0px 0px 5px 0px;padding:0px;">
                            <input type="text" class="col-xs-8" ng-model="achievement" ng-repeat="achievement in scrape_result.achievements"/>
                        </div>
                    </div>

                    <div id="origin" class="row">
                        <label class="col-xs-4"> Origin </label>
                        <input type="text" class="col-xs-8" ng-model="scrape_result.origin"/>
                    </div>

                    <div id="associated_actors" class="row">
                        <label class="col-xs-4"> Associated Actors </label>
                        <div class="col-xs-8 row" style="margin:0px 0px 5px 0px;padding:0px;">
                            <input type="text" class="col-xs-12" ng-model="assoc_actor" ng-repeat="assoc_actor in scrape_result.associated_actors"/>
                        </div>
                    </div>

                    <div id="data_sources" class="row">
                        <label class="col-xs-4"> Data Source </label>
                        <input type="text" class="col-xs-8" ng-model="scrape_result.data_source"/>
                    </div>

                    <div id="img_title" class="row">
                        <label class="col-xs-4"> Image Title </label>
                        <input type="text" class="col-xs-8" ng-model="scrape_result.img_title"/>
                    </div>

                    <div id="links" class="row">
                        <label class="col-xs-4"> Links </label>
                        <input type="text" class="col-xs-8" ng-model="scrape_result.links"/>
                    </div>

                </div>
                <div class="col-xs-2"></div>
            </div>

            <div class="row" style="margin:20px;">
                <h2 style="margin:0px 40px;"> Dump </h2>
                <div class="col-xs-2"></div>
                <div class="col-xs-8">

                    <div class="col-xs-12 row" ng-repeat="(key, value) in data_dump">
                        <label class="col-xs-4"> {{key}} </label>
                        <input type="text" class="col-xs-8" ng-model="value"/>
                    </div>
                </div>
                <div class="col-xs-2"></div>
            </div>

            <div class="row" style="padding:20px;">

                <div class="col-sm-4"></div>

                <div class="col-sm-2">
                    <input type="submit" value="Submit" style="padding:10px;width:100%;height:100%;text-align:center;" ng-click="approve_actor(stage_name, scrape_result.event_id)">
                </div>

                <div class="col-sm-4"></div>
            </div>
        </div>   
    
    
    </body>

</html>