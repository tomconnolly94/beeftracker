                        <div id="videowrapper" class="embed-responsive embed-responsive-16by9">
                            <iframe style="width:100%;" ng-src="{{ trustSrc(url) }}" class="embed-responsive-item" allowfullscreen="true"></iframe>
                        </div>

                        <h2>{{ song_title }}</h2>

                        <div id="scroll_panel" style="max-height:50vh;">
                            <a ng-href="/artist/{{artist_id}}" target="_self">
                                <h3>{{ name }}</h3>
                            </a>

                            <h4>{{ date }}</h4>

                            <h3>Description</h3>

                            <p>{{ description }}</p>

                            <p>{{ description }}</p>

                            <p>{{ description }}</p>

                            <p>{{ description }}</p>

                            <p>{{ description }}</p>

                            <h3>Best Lyrics</h3>
                            
                            <ul>
                                
                                <li ng-repeat="lyric_item in top_lyrics" style="margin:5px;">
                                    "{{ lyric_item }}... "
                                </li>
                            
                            </ul>
                            

                            <!-- unfished genius embedding, first my attempt to draw data from database, not working, i think due to html being computed way before the angular returns with the data so the blockquotes cannot transform to iframe tags
