<!DOCTYPE html>
<html ng-app='beef_app' lang='en'>
    <head>
        
        <!--
        Page name: home.ejs
        Project: Beeftracker
        Author: Tom Connolly
        Date: 8/11/16
        -->
        
        <title>Beef</title>
        
        
        <meta charset="utf-8">
        
        <!-- icon -->
        <link rel="shortcut icon" href="/logo/steak.ico">        
        
        <!-- tag for mobile zoom -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <!-- stylesheets -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/beef.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/house_styles.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/timeline_styles.css">
        
        <!-- angular libraries --> 
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
        <script src="/modules/angular-route/angular-route.min.js"></script>
        <link rel='stylesheet' href='/modules/angular-loading-bar/build/loading-bar.min.css' type='text/css' media='all' />
        <script type='text/javascript' src='/modules/angular-loading-bar/build/loading-bar.min.js'></script>
        
        <!-- bootstrap libraries -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Amatic+SC" />
                
        <!-- controllers -->
        <script src="/controllers/beef/beef_app.js"></script>
        <script src="/controllers/beef/beef_controller.js"></script>
        <script src="/controllers/beef/timeline_controller.js"></script>
        
        <!-- other libraries -->
        
        <!-- javascript script imports -->
        <!--<script src="/js/load_background.js"></script>-->
                
        <script> 
            
            //load headers and footers
            $(document).ready(function(){
                $("#top_bar").load("/partials/header.ejs"); 
                $("#bottom_bar").load("/partials/footer.ejs");        
            });
            
            //when affixed panel is activated, make sure it stays the same width
            $(window).scroll(function () {
                $('#nav_fixed').width($('#nav_fixed').width());
            });
            
        </script>
        
	</head>
	<body id="bootstrap-overrides">
        <div class="container" ng-cloak>
        
            <!-- loading bar -->
            <div id="loading-bar-container"></div>
            <div id="header"></div>
            <div id="top_bar"></div>
            
            <!-- spacer bar -->
            <div class="row">
                <div class="col-xs-12" style="height:60px;"></div>
            </div>
            
            <!-- rest of page -->
            <div class="row">
                
                <div class="col-sm-7" ng-controller="timelineController">
                    
                    <div class="jumbotron" id="artist_filter_panel" style="display:inline-block;text-align:center;width:100%;">
                        
                        <div class="col-sm-5">
                            <h3 ng-model="main_name"><div id="main_aggressor" class="black_font"> {{ main_event.name }} </div></h3>
                        </div>

                        <div class="col-sm-2"><h3 class="black_font">vs</h3></div>

                        <div class="col-sm-5" ng-app>
                            <select multiple class="form-control" ng-change="handle_change(selected_targets)" ng-model="selected_targets" ng-options="target for target in main_event.targets" style="height:90px;"></select>
                        </div>
                        
                    </div>

                    <div id="timeline">
                        <ul class="timeline">
                            <li ng-repeat="event in events" class="{{ event.timeline_event_class }}">
                                
                                <div class="timeline-badge" style="background-color:#FFFFFF">
                                    <span class="{{event.glyphicon}}" style="color:#000000"></span>
                                </div>
                                
                                <a ng-href="/beef/{{event.event_num}}" class="timeline-panel" style="background-color:{{event.colour}};padding:0px;border-color:#000000">                                        
                                    <div class="row" style="margin:20px;text-align:right;">

                                        <img ng-src="/event_images/{{ event.img_link }}" class="img-circle col-sm-4" style="position:relative;margin:5px;padding:0px;float:left;" height="75" width="75">

                                        <div class="col-sm-7" style="position:relative;float:right;">

                                            <div class="timeline-heading">
                                                <h4 style="margin:5px;font-weight:bold;">{{ event.title }}</h4>
                                            </div>

                                            <div class="timeline-body">

                                                <h5 style="margin:5px;">{{ event.name }}</h5>
                                                <h5 style="margin:5px;">{{ event.date }}</h5>

                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        </ul>   
                    </div>                    
                </div>
                
                <div class="col-sm-5" id="nav_wrapper" ng-controller="currentEventController">
                    
                    <div id="nav_fixed" data-spy="affix" data-offset-top="250" data-offset-bottom="250" class="nav nav-pills nav-stacked">
                        <div class="pre-scrollable" style="max-height:100vh;">
                            
                           <img ng-src="/event_images/{{ img_link }}" class="img-circle" height="200" width="250">
                            
                            <h2>{{ song_title }}</h2>
                            
                            <a ng-href="/artist/{{artist_id}}" target="_self">
                                <h3>{{ name }}</h3>
                            </a>
                            
                            <h4>{{ date }}</h4>

                            <h3>Description</h3>

                            <p>{{ description }}</p>

                            <h3>Best Lyrics</h3>

                            <ul>
                                <li ng-repeat="lyrics in top_lyrics"> <p> "{{ lyrics }}.." </p></li>
                            </ul>

                            <div id="videowrapper" class="embed-responsive embed-responsive-16by9">
                                <iframe style="width:100%;" ng-src="{{ trustSrc(url) }}" class="embed-responsive-item" allowfullscreen="true"></iframe>
                            </div>
                                
                            <h3>Related Beef</h3>

                        </div>
                    </div>
                </div>
            </div>
            <div id="bottom_bar" class="row" style="margin:50px 0px"></div>
        </div>
	</body>
</html>