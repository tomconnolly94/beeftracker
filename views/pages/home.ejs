<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html ng-app="home">

    <!--
        Page name: home.ejs
        Project: Beeftracker
        Author: Tom Connolly
        Date: 8/11/16
    -->
    
    <head>
        <title>Home</title>
        <meta charset="utf-8"><!-- encoding version -->
        <link rel="shortcut icon" href="/logo/steak.ico"><!-- icon -->
        <meta name="viewport" content="width=device-width, initial-scale=1"><!-- tag for mobile zoom -->
        
        <!-- jQuery imports -->
        <script src="/modules/jquery/dist/jquery.min.js"></script>
        
        <!--angular imports -->
        <script src="/modules/angular/angular.min.js"></script>
        <script src="/modules/angular-resource/angular-resource.min.js"></script>
        <script src="/modules/angular-route/angular-route.min.js"></script>
        <script type='text/javascript' src='/modules/angular-loading-bar/build/loading-bar.min.js'></script>
        
        <!-- bootstrap imports -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="/modules/bootstrap/bootstrap.min.js" crossorigin="anonymous"></script> 
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Amatic+SC" />
        <link rel='stylesheet' href='/modules/angular-loading-bar/build/loading-bar.min.css' type='text/css' media='all' />
                
        <!-- bespoke javascript files -->
        <script src="/controllers/home/home_app.js" type="text/javascript"></script>
        <script src="/controllers/home/search_box_controller.js" type="text/javascript"></script>
        <script src="/controllers/home/event_stream_controller.js" type="text/javascript"></script>
        <script src="/js/beef_tracker_colour_bank.js"></script>
        
        <!-- bespoke stylesheets -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/house_styles.css">
        
        <script>
            //load header and footer
            $(function(){
                $("#top_bar").load("/partials/header.ejs");
                $("#bottom_bar").load("/partials/footer.ejs");
            });
        </script>
    </head>

    <body id="bootstrap-overrides">
        <div class="container">
        
            <div id="search_area" ng-controller="searchController">
            <div id="top_bar"></div>

                <div id="search_box" class="row form-group form-group-lg" style="margin:0px;">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4">

                        <div class="row">
                            <span class="col-sm-1 glyphicon glyphicon-search" style="width:40px;height:40px;padding:10px 0px 10px 10px;"></span>
                            <div  class="col-sm-10" style="padding:0px;">
                                <input type="text" ng-model="search_term" ng-change="submit()" style="width:100%;height:40px;font-size:25px;" placeholder="Search for an Event" id="search_box">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4"></div>
                </div>

                <div id="search_results" class="row" style="padding:0px;">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4">
                        <h3>{{ results_string }}</h3>
                        <h4>{{ results_details_string }}</h4>

                        <ul style="list-style-type:none;">

                            <li ng-repeat="record in records" style="margin:30px 0px;">   

                                <a ng-href="/beef/{{record.eventNum}}" style="font-weight:bold;height:120px;background-color:#9C0505;padding:0px;">
                                    <h3 style="margin:5px;font-weight:bold;"> {{ record.title }}</h3>
                                    <img  ng-src="/event_images/{{ record.img_link }}" class="img-circle" style="position:relative;bottom:25px;margin:5px;float:right;" height="75" width="75">
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-4"></div>
                </div>
            </div>
            
            <hr>
            
            <div class="row" style="padding:0px 250px;">
                <h3 style="text-align:center;">Recent Events:</h3>
            </div>
                
            <div class="row" ng-controller="eventStreamController">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <ul>
                        <li ng-repeat="event in event_stream_events" style="margin:30px 0px;">        
                            <a ng-href="/beef/{{event.eventNum}}" class="selectable_event" style="min-height:120px;background-color:#9C0505;font-weight:bold;padding:0px;border-color:#000000;border-width:10px;">

                                <div class="row" style="width:100%;margin:0px;text-align:right;">

                                    <div class="col-sm-3">
                                        <img  ng-src="/event_images/{{ event.img_link }}" class="img-circle" style="position:relative;margin:10px;padding:0px;float:left;" height="100" width="100">
                                    </div>
                                    <div class="col-sm-8" style="position:relative;float:right;">

                                        <h3 style="margin:5px;font-weight:bold;"> {{ event.title }}</h3>

                                        <h5 style="margin:5px;">{{ event.name }}</h5>

                                        <h5 style="margin:5px;">{{ event.date }}</h5>
                                    </div>

                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div id="bottom_bar" class="row" style="margin:50px 0px"></div>
        </div>
    </body>
</html>