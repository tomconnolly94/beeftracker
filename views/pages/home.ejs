    <head>
        <title>Home</title>
        <!-- icon -->
        <link rel="shortcut icon" href="/logo/steak.ico">
        <!-- tag for mobile zoom -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- stylesheets -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/house_styles.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Amatic+SC" />
        <!-- javascript library references -->
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <!-- javascript file references -->
        <script src="/controllers/home/home_app.js" type="text/javascript"></script>
        <script src="/controllers/home/search_box_controller.js" type="text/javascript"></script>
        <script src="/controllers/home/event_stream_controller.js" type="text/javascript"></script>
        
        <script> 
            $(function(){
                $("#top_bar").load("/partials/header.ejs"); 
            });
        </script>
    </head>

    <body>
        <div class="container">
            <div id="top_bar"></div>
            
            <div class="row">
                <div id="search_area" class="col_sm_12" ng-controller="searchController">
                    <div id="search_box">
                            <span class="glyphicon glyphicon-search"></span>
                            <input type="text" ng-model="search_term" ng-change="submit(search_term)" placeholder="Search for an Event" id="search_box">
                    </div>
                    <div id="search_results" style="padding:0px 250px;">
                        <ul style="list-style-type:none;">
                           <li ng-repeat="record in records" style="height:100px;background-color:#FF4444;">        
                            <a ng-href="/beef/{{record.eventNum}}" style="color:#FFFFFF; font-weight:bold;">
                                <h3 style="margin:5px;font-weight:bold;"> {{ record.title }}</h3>
                                <img  src="/event_images/{{ record.img_link }}" class="img-circle" style="position:relative;bottom:25px;margin:5px;float:right;" height="75" width="75">
                            </a>
                        </li>
                        </ul>
                    </div>
                </div>
            </div>
            <hr/>
            
