<!DOCTYPE html>
<html ng-app='auth' lang='en'>
    <head>

        <!--
        Page name: home.ejs
        Project: Beeftracker
        Author: Tom Connolly
        Date: 8/11/16
        -->

        <title>Beeftracker</title> <!-- page tab title -->
        
        <!-- Bespoke css files -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/beef.css"/>
        <link rel="stylesheet" type="text/css" href="/stylesheets/timeline_styles.css"/>
        <link rel="stylesheet" href="/stylesheets/event_box_styles_beef.css"/>

	</head>
	<body id="bootstrap-overrides">
        <div class="container">

            <!-- loading bar -->
            <div id="loading-bar-container"></div>
            
            <div header-directive></div>

            <!-- rest of page -->
            <div class="row" ng-cloak ng-controller="authController">
                <div class="col-sm-4"></div>
                <div class="col-sm-4 row">
                    
                    <h2 style="text-align:center;">Admin Login</h2>            
                    
                    <form name="authenticate">
                        <div class="row col-sm-12">
                            <label class="col-sm-4">Username: </label>
                            <input class="col-sm-8" type="text" ng-model="username"/>
                        </div>
                        <div class="row col-sm-12">
                            <label class="col-sm-4">Password: </label>
                            <input class="col-sm-8" type="password" ng-model="password"/>
                        </div>
                        <div class="row col-sm-12" style="padding:10px 0px">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">
                                <input type="submit" class="btn" id="submit" ng-click="authenticate()"/>
                            </div>
                            <div class="col-sm-4"></div>
                            <!--<div class="row col-sm-6">
                                <input type="button" class="btn" value="Logout" ng-click="deauthenticate()"/>
                            </div>-->
                        </div>
                    </form>
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div footer-directive></div>
        </div>

        <!-- JQuery -->
        <script src="/modules/jquery/dist/jquery.min.js"></script>
        
        <!-- Globals file -->
        <script src="/js/globals.js"></script>
        
        <!-- Core angular scripts -->
        <script src="/modules/angular/angular.min.js"></script>
        <script src="/modules/angular-resource/angular-resource.min.js"></script>
        <script src="/modules/angular-route/angular-route.min.js"></script>
        <script src="/modules/angular-loading-bar/build/loading-bar.min.js"></script>
        <script src="/modules/bootstrap/dist/js/bootstrap.min.js"></script>
        
        <!-- Bespoke angular scripts -->
        <script src="/controllers/search_box_controller.js"></script>
        <script src="/controllers/authentication/auth_app.js"></script>
        <script src="/controllers/authentication/auth_controller.js"></script>
        
        <!-- Load global css files -->
        <script src="/stylesheets/loading/global_css_loader.js"></script>
        
	</body>
</html>
