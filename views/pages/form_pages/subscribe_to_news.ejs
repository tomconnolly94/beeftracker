            ga('create', 'UA-92664606-1', 'auto');
            ga('send', 'pageview');
        </script>
    </head>

    <body id="bootstrap-overrides">
        <div class="container" style="text-align:center">
            <div id="top_bar"></div>
            
            <!-- spacer bar -->
            <div class="row">
                <div class="col-xs-12" style="height:20px;"></div>
            </div>
            
            <h2>Submit your email address to recieve weekly email updates about new Beef!</h2>
            
            <!-- spacer bar -->
            <div class="row">
                <div class="col-xs-12" style="min-height:20px;"></div>
            </div>
                        
            <!--<div style="height:100%" ng-controller="submitOptions" class="row">-->
            <div style="height:100%" class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <form id="subscribe_form" name="subscribe_form" class="form-horizontal" ng-controller="subscribeFormController" method="post" enctype="multipart/form-data">
            
                        <hr>
                         
                        <div class="form-group row">
                            <label class="control-label col-sm-3" style="text-align:center;" for="title">Name:</label>
                            <div class="col-sm-9 row" style="margin:0px;">
                                <span class="col-sm-1 glyphicon glyphicon-info-sign"  title="Enter your name." style="padding:10px 0px 0px 0px;display:inline;" aria-hidden="true"></span>
                                <div class="col-sm-11" style="padding:0px;">
                                    <input id="title" class="form-control col-sm-11" name="name" type="text" placeholder="" ng-model="name" ng-Trim="false">
                                </div>
                                
                            </div>
                        </div>
                        
                        <hr>
                                   
                        <div class="form-group row">
                            <label class="control-label col-sm-3" style="text-align:center;" for="title">* Email:</label>
                            <div class="col-sm-9 row" style="margin:0px;">
                                <span class="col-sm-1 glyphicon glyphicon-info-sign"  title="Enter your email address" style="padding:10px 0px 0px 0px;display:inline;" aria-hidden="true"></span>
                                <div class="col-sm-11" style="padding:0px;">
                                    <input id="title" class="form-control col-sm-11" name="email_address" type="text" placeholder="" ng-model="email_address" ng-Trim="false" required>
                                </div>
                                
                            </div>
                        </div>
                        
                        <hr>

                        <div class="form-group row">
                            <label class="control-label col-sm-3" style="text-align:center;" for="title">How'd you find us?</label>
                            <div class="col-sm-9" style="margin:0px;">
                                <span class="col-sm-1 glyphicon glyphicon-info-sign"  title="This is a place to add other people who are associated with this actor, either by being friends or by working together. They must not be enemies." style="padding:10px 0px 0px 0px;display:inline;" aria-hidden="true"></span>
                                <div class="col-sm-11" style="margin:0px;padding:0px">
                                    <select ng-model="routes_here" multiple class="form-control">
                                        <option ng-repeat="route_here_option in route_here_options" value="{{route_here_option}}">{{ route_here_option }}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    
                        <hr>
                                                
                        <div class="form-group">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                                <button type="submit" ng-click="process_form()" class="btn btn-default"><p style="color:#000000;margin:0px;padding:0px;">Submit</p></button>
                            </div>
                            <div class="col-sm-3"></div>
                        </div>
                    </form>
                </div> 
                <div class="col-sm-2"></div>                
            </div>
            <div id="bottom_bar"></div>
        </div>
    </body>
</html>
