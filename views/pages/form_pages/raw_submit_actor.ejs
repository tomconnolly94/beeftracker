<html>

    <head>
    </head>

    <body>
    
        <div style="height:100%" class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <form class="form-horizontal" method="post" ng-controller="actorFormController" enctype="multipart/form-data">

                    <div class="form-group row">
                        <label class="control-label col-sm-3" style="text-align:center;" for="title">Stage Name:</label>
                        <div class="col-sm-9">
                            <input type="text" ng-model="stage_name" class="form-control" id="title" placeholder="Enter the name this person is most famous for">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-sm-3" style="text-align:center;" for="title">Full Birth Name</label>
                        <div class="col-sm-9">
                            <input type="text" ng-model="birth_name" class="form-control" id="title" placeholder="Enter the person's birth name with all middle names">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-3">
                            <div class="row">
                                <label class="control-label" style="text-align:center;" for="comment">Nicknames:</label>
                            </div>
                            <div class="row" style="height:15px;"></div>
                            <div class="btn-group btn-group-sm">
                                <button ng-click="add_nickname()" class="btn btn-default" type="button" style="color:#000000;border:0px;"><b>+</b></button>
                                <button ng-click="remove_nickname()" class="btn btn-default" type="button" style="color:#000000;border:0px;"><b>-</b></button>
                            </div>
                        </div>
                        <div class="col-sm-9" style="margin:0px;">
                            <div ng-repeat="nickname in nicknames" style="margin:0px;padding:0px 0px 5px 0px;display:block" class="row col-sm-12" >
                                <input class="col-sm-12" style="color:#000000;" type="text" placeholder="enter nickname..." ng-model="nickname.url">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="control-label col-sm-3" style="text-align:center;" for="comment">Date:</label>
                        <div class="col-sm-9">
                            <input type="date" class="col-sm-9" id="datepicker" ng-model="date" value="2015-03-01" style="color:#000000;padding:15px 0px;height:100%;width:100%;">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-3">
                            <div class="row">
                                <label class="control-label" style="text-align:center;" for="comment">Occupations:</label>
                            </div>
                            <div class="row" style="height:15px;"></div>
                            <div class="btn-group btn-group-sm">
                                <button ng-click="add_occupation()" class="btn btn-default" type="button" style="color:#000000;border:0px;"><b>+</b></button>
                                <button ng-click="remove_occupation()" class="btn btn-default" type="button" style="color:#000000;border:0px;"><b>-</b></button>
                            </div>
                        </div>
                        <div class="col-sm-9" style="margin:0px;">
                            <div ng-repeat="occupation in occupations" style="margin:0px;padding:0px 0px 5px 0px;display:block" class="row col-sm-12" >
                                <input class="col-sm-12" style="color:#000000;" type="text" placeholder="enter occupation..." ng-model="occupation.url">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="control-label col-sm-3" style="text-align:center;" for="title">Birthplace</label>
                        <div class="col-sm-9">
                            <input type="text" ng-model="origin" class="form-control" id="title" placeholder="Enter the City, state/province/country and Country of birth of this artist">
                        </div>
                    </div>
                                        
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <div class="row">
                                <label class="control-label" style="text-align:center;" for="comment">Notable Achievements:</label>
                            </div>
                            <div class="row" style="height:15px;"></div>
                            <div class="btn-group btn-group-sm">
                                <button ng-click="add_achievement()" class="btn btn-default" type="button" style="color:#000000;border:0px;"><b>+</b></button>
                                <button ng-click="remove_achievement()" class="btn btn-default" type="button" style="color:#000000;border:0px;"><b>-</b></button>
                            </div>
                        </div>
                        <div class="col-sm-9" style="margin:0px;">
                            <div ng-repeat="achievement in achievements" style="margin:0px;padding:0px 0px 5px 0px;display:block" class="row col-sm-12" >
                                <input class="col-sm-12" style="color:#000000;" type="text" placeholder="enter achievement..." ng-model="achievement.url">
                            </div>
                        </div>
                    </div>
                                        
                    <div class="form-group row">
                        <label class="control-label col-sm-3" style="text-align:center;" for="comment">Bio:</label>
                        <div class="col-sm-9" style="margin:0px;">
                            <textarea class="form-control" ng-model="bio" rows="3" id="comment" placeholder="Enter a bio for the actor..."></textarea>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="control-label col-sm-3" style="text-align:center;" for="title">Associated Actors</label>
                        <div class="col-sm-9" style="margin:0px;">
                            <div class="col-sm-9" style="padding:0px;margin:0px;">
                                <select ng-model="assoc_actors" multiple class="form-control">
                                    <option ng-repeat="actor in actors" value="{{actor._id}}">{{ actor.stage_name }}</option>
                                </select>
                            </div>
                            <div class="col-sm-3" style="padding:0px;margin:0px;">
                                <button type="button" class="btn btn-default" style="color:#000000;height:60%;margin:0px 10px;top:50%;transform: translate(0%,50%);" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add new</button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10"><!--
                            <button type="submit" ng-click="" class="btn btn-default">Submit</button>-->
                            <button ng-click="process_actor_data()" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </form>
            </div> 
            <div class="col-sm-3"></div>                
        </div>
        
    </body>

</html>