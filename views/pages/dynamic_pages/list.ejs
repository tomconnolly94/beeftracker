            function jump(){
                var hash = location.hash;
                hash = hash.substr(1);
                console.log(hash);
                console.log(document.getElementById(hash));
                var top = document.getElementById(hash).offsetTop; //Getting Y of target element
                window.scrollTo(0, top);  
            }*/
            
        </script>
        
	</head>
	<body id="bootstrap-overrides">
        <div class="container">
            
            <!-- loading bar -->
            <div id="loading-bar-container"></div>
            <div id="header"></div>
            <div id="top_bar"></div>
                    
            <!-- rest of page -->
            <div class="row" ng-cloak ng-controller="listController">

                <div style="height:100%" class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4">
                        <hr>

                        <div ng-repeat="item in items" style="text-align:center">
                            <a href="{{item.link}}" target="_self">
                                <h4>{{ item.stage_name }}</h4>
                                <h4>{{ item.title }} - {{ item.aggressor_object[0].stage_name }}</h4>
                            </a>
                            <hr>
                        </div>
                        
                    </div>
                    <div class="col-sm-4"></div>
                
            </div>
            <div id="bottom_bar"></div>
        </div>
        
        </div>
	</body>
</html>
