<!DOCTYPE html>
<html ng-app="actor">

        <!--
            Project: Beeftracker
            Authors: Tom Connolly
            Date: 8/11/16
        -->

    <head>
        <title>Beeftracker</title>
        
        <!-- Bespoke css files -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/beef.css"/>
        <link rel="stylesheet" type="text/css" href="/stylesheets/timeline_styles.css"/>
         
    </head>

    <body id="bootstrap-overrides">
        <div class="container" class="col-sm-7" ng-cloak>
        
            <!-- loading bar -->
            <div id="loading-bar-container"></div>
            <div id="header"></div>
            
            <div header-directive></div>
            
            <!-- rest of page -->
            <div class="row" id="actor_details">
                <div class="col-sm-1"></div>
                
                <div class="col-sm-10 row" ng-controller="actorSearchController">
                    
                    <div class="col-sm-12 row">
                        <div class="col-sm-4" style="height:100%">
                            <img class="img-circle" src="{{ loc_img_link }}" class="img-circle" height="100%" width="100%">
                        </div>

                        <!--<script>
                            cl.imageTag('beeftracker_new_logo_cropped_small_square_psypj8.png').toHtml();
                        </script>-->
                        
                        <div class="col-sm-8">
                            <h1>{{ stage_name }}</h1>
                            <h4 class="sub">{{ birth_name }}</h4>
                            <h5 class="sub">{{ d_o_b }}</h5>
                            <h5 class="sub">{{ origin }}</h5>
                            <p>{{bio}}</p>
                            
                            <div class="row">
                            
                                <div class="col-sm-5">
                                    <h4>Occupations</h4>
                                    <ul>
                                        <li ng-repeat="occupation in occupations">
                                        {{ occupation }}
                                        </li>
                                    </ul>
                                </div>
                                
                                <div id="link_area" class="col-sm-7 row">
                                    <div class="col-sm-6" ng-repeat="triples in links">
                                        <div ng-repeat="record in triples" class="jumbotron row" style="padding:0px;height:60%;margin:5px;">
                                            <a ng-href="{{ record.url }}" target="_blank">
                                                <h6 style="margin:10px;text-align:center">
                                                    <b>{{ record.button_name }}</b>
                                                </h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            
                            
                        </div>
                    </div>
                </div>
            </div>         
            
            <div class="row">
                <div class="col-xs-12" style="height:20px;"></div>
            </div>
            
            <hr/>
            
            <div class="row" id="general_links_panel">
                    
                <div class="col-sm-2"></div>
                <div class="col-sm-4" ng-controller="relatedActorsController">
                    <h2>Related actors:</h2>        
                        <div ng-repeat="actor in associated_actors"  class="selectable_event" style="background-color:#9C0505;font-weight:bold;padding:15px;margin:0px;border-color:#000000;border-width:10px;border-radius: 5px;float:left;" target="_self">
                            <a ng-href="/actor/{{ actor._id }}" target="_self" style="padding:0px;">
                                <img class="img-circle" ng-src={{event.loc_img_link}} style="margin:0px auto;" height="50px" width="50px">
                                <h5>{{ actor.stage_name }}</h5>
                            </a>
                        </div>
                </div>
                
                <div class="col-sm-4" ng-controller="recentEventsController">
                    <h2>Recent Events:</h2>        
                        <div ng-repeat="event in events"  class="selectable_event" style="background-color:#9C0505;font-weight:bold;padding:15px;margin:10px;border-color:#000000;border-width:10px;border-radius: 5px;float:left;" target="_self">
                            <a ng-href="/beef/{{event._id}}" target="_self" style="padding:0px;">
                                <img class="img-circle" ng-src={{event.loc_img_link}} height="50px" width="50px">
                                <h5>{{ event.title }}</h5>
                                actors included: 
                                <ul>
                                    <li ng-repeat="target in event.targets">

                                        <p>{{ target.stage_name }}</p>

                                    </li>
                                </ul>
                            </a>
                        </div>
                </div>

                <!--<div class="col-sm-4" ng-controller="recentEventsController">
                    <h2>Recent Events:</h2>
                    <div ng-repeat="event in events" style="margin:0px 0px 0px 5px;float:left;">
                        <a ng-href="/beef/{{event._id}}" class="selectable_event" style="background-color:#9C0505;font-weight:bold;padding:15px;margin:0px;border-color:#000000;border-width:10px;border-radius: 5px;" target="_self">
                            <img class="img-circle" ng-src="/event_images/{{event.loc_img_link}}" style="margin:0px auto;" height="50px" width="50px">


                            <h5>{{ event.title }}</h5>
                            actors included: 
                            <ul>
                                <li ng-repeat="target in event.targets">

                                    <p>{{ target.stage_name }}</p>

                                </li>
                            </ul>

                        </a>
                    </div>
                </div>-->
                <div class="col-sm-2"></div>
            </div>
            <div footer-directive></div>
        </div>
        
        <!-- JQuery -->
        <script src="/modules/jquery/dist/jquery.min.js"></script>
        
        <!-- Globals file -->
        <script src="/js/globals.js"></script>
        
        <!-- Core angular scripts -->
        <script src="/modules/angular/angular.min.js"></script>
        <script src="/modules/angular-resource/angular-resource.min.js"></script>
        <script src="/modules/angular-route/angular-route.min.js"></script>
        <script src="/modules/angular-loading-bar/build/loading-bar.min.js"></script>
        <script src="/modules/bootstrap/dist/js/bootstrap.min.js"></script>
        
        <!-- Bespoke angular scripts -->
        <script src="/controllers/search_box_controller.js"></script>
        <script src="/controllers/actor/actor_app.js"></script>
        <script src="/controllers/actor/actor_controller.js"></script>
        <script src="/controllers/actor/recent_events_controller.js"></script>
        <script src="/controllers/actor/related_actors_controller.js"></script>
        <script src="/js/beef_tracker_colour_bank.js"></script>
        
        <!-- Load global css files -->
        <script src="/stylesheets/loading/global_css_loader.js"></script>
        
