            var nav_visible = false;

            function toggleNav(){

                if(nav_visible){
                    document.getElementById("mySidenav").style.width = "0";
                    document.getElementById("mob_timeline_toggle_button").innerHTML = "View Timeline";
                    nav_visible = false;
                }
                else{
