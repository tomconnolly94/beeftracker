        <!--link rel="stylesheet" type="text/css" href="C:/Users/James/Desktop/Final Year/Personal Projects/BeefTracker/workspace/bt/beeftracker/public/stylesheets/artist.css"-->

         <link rel="stylesheet" type="text/css" href="/stylesheets/artist.css">
        
        
        <!-- javascript file references -->
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
        <script src="/modules/angular-route/angular-route.min.js"></script>

        <!-- Angular scripts -->
        <script src="/controllers/artist/artist_app.js" type="text/javascript"></script>
        <script src="/controllers/artist/artist_controller.js" type="text/javascript"></script>

    </head>

    <body>
        <div class="panelContainer" ng-controller="artistSearchController">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="container">
                        <div id="headingContainer" class="row">
                            <div id="image" class="col-md-6">
                                <img src="{{ img_link }}" alt="Artist Image" class="img-thumbnail">
                            </div>
                            <div id="information" class="col-md-6">
                                <h1> {{ stage_name }}</h1>
                                <h1><small> {{ birth_name }} </small></h1>
                                <h1><small>Born: {{d_o_b}}</small></h1>
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="panel-body">
                    <div class="event-container">
                    <h2>Recent Events:</h2>
                        <div class="grid" class="condensed">
                            <div class="row cells3" >
                                    <button class="shortcut-button bg-cyan bg-active-darkBlue fg-white" ng-repeat="event in events">
                                        <span class="title" ng-href="/beef/{{event.event_id}}">{{ event.title }}</span>
                                    </button>
                            </div>

                            <div class="row cells3">
                                <div class="event-box">
                                    <button class="shortcut-button bg- ribbed-cyan bg-active-darkBlue fg-white">
                                        <span class="title">Event 4</span>
                                    </button>
                                </div>
                                <div class="event-box">
                                    <button class="shortcut-button bg- ribbed-cyan bg-active-darkBlue fg-white">
                                        <span class="title">Event 4</span>
                                    </button>
                                </div>
                                <div class="event-box">
                                    <button class="shortcut-button bg- ribbed-cyan bg-active-darkBlue fg-white">
                                        <span class="title">Event 4</span>
                                    </button>
                                </div>
                                    
                                  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>