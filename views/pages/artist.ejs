<!DOCTYPE html>
<html ng-app="actor">

        <!--
            Project: Beeftracker
            Authors: Tom Connolly
            Date: 8/11/16
        -->

    <head>
        <title>Beeftracker</title>
	<meta name="description" content="Beeftracker is a brand new way to read the news, working from crowd sourced data it aims to put news events back into their context by stringing them together in a timeline. Check it out now!">
        <meta charset="utf-8"><!-- encoding version -->
        <link rel="shortcut icon" href="/logo/steak.ico"><!-- icon -->
        <meta name="viewport" content="width=device-width, initial-scale=1"><!-- tag for mobile zoom -->
        
        <!-- jQuery imports -->
        <script src="/modules/jquery/dist/jquery.min.js"></script>
        

        <!--angular imports -->
        <script src="/modules/angular/angular.min.js"></script>
        <script src="/modules/angular-resource/angular-resource.min.js"></script>
        <script src="/modules/angular-route/angular-route.min.js"></script>
        <script type='text/javascript' src='/modules/angular-loading-bar/build/loading-bar.min.js'></script>
        
        <!-- bootstrap imports -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="/modules/bootstrap/bootstrap.min.js" crossorigin="anonymous"></script> 
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Amatic+SC" />
        <link rel='stylesheet' href='/modules/angular-loading-bar/build/loading-bar.min.css' type='text/css' media='all' />
        
        <!-- bespoke javascript files -->
        <script src="/controllers/artist/artist_app.js" type="text/javascript"></script>
        <script src="/controllers/artist/artist_controller.js" type="text/javascript"></script>
        <script src="/controllers/artist/recent_events_controller.js" type="text/javascript"></script>
        <script src="/controllers/artist/related_artists_controller.js" type="text/javascript"></script>
        
        <!-- bespoke stylesheets -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/house_styles.css">
                        
        <script>
            //load header and footer
            $(function(){
                $("#top_bar").load("/partials/header.ejs"); 
                $("#bottom_bar").load("/partials/footer.ejs");
            });
        </script>
        
        <!-- include google analytics -->
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-92664606-1', 'auto');
            ga('send', 'pageview');
        </script>
    </head>

    <body id="bootstrap-overrides">
        <div class="container" class="col-sm-7">
        
            <!-- loading bar -->
        <div id="loading-bar-container"></div>
        <div id="header"></div>
        <div id="top_bar"></div>
            
            <!-- rest of page -->
            <div class="row" id="artist_details">
                <div class="col-sm-1"></div>
                
                <div class="col-sm-10 row" ng-controller="artistSearchController">
                    
                    <div class="col-sm-12 row">
                        <div class="col-sm-4" style="height:100%">
                            <img class="img-circle" src="/artist_images/{{ loc_img_link }}" class="img-circle" height="100%" width="100%">
                        </div>

                        <div class="col-sm-8">
                            <h1>{{ stage_name }}</h1>
                            <h4 class="sub">{{ birth_name }}</h4>
                            <h5 class="sub">{{ d_o_b }}</h5>
                            <h5 class="sub">{{ origin }}</h5>
                            <p>{{bio}}</p>
                        </div>
                    </div>
                    <div class="col-sm-12 row" style="padding:0px;">
                        <div class="col-sm-2">
                            <h4>Occupations</h4>
                            <ul>
                                <li ng-repeat="occupation in occupations">
                                {{ occupation }}
                                </li>
                            </ul>
                        </div>
                        <!--<div class="col-sm-8" style="height:100%;">
                            <div class="row" style="text-align:center;padding:0px;margin:40px;">
                                <div class="jumbotron col-sm-3" style="padding:0px;height:60%;margin:10px;"><h4 style="margin:10px;"><a ng-href="{{ spotify_link }}" target="_blank" >Spotify</a></h4></div>
                                <div class="jumbotron col-sm-3 col-centered" style="padding:0px;height:60%;margin:10px;"><h4 style="margin:10px;"><a ng-href="{{ youtube_link }}" target="_blank" >Youtube</a></h4></div>
                                <div class="jumbotron col-sm-3" style="padding:0px;height:60%;margin:10px;"><h4 style="margin:10px;"><a ng-href="{{ wikipedia_link }}" target="_blank" >Wikipedia</a></h4></div>
                            </div>
                        </div>-->
                        
                        <div id="link_area" class="col-sm-8">
                                <div class="row" ng-repeat="triples in links">
                                    <div class="col-sm-1"></div>
                                    <div ng-repeat="record in triples" class="jumbotron col-sm-3" style="padding:0px;height:60%;margin:5px;">
                                        <h4 style="margin:10px;text-align:center"><a ng-href="{{ record.url }}" target="_blank">
                                            <b>{{ record.button_name }}</b></a>
                                        </h4>
                                    </div>
                                    <div class="col-sm-1"></div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <h4>Associated with {{ stage_name }}:</h4>
                            <ul>
                                <li ng-repeat="artist in associated_actors">
                                    {{ artist.stage_name }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>         
            
            <div class="row">
                <div class="col-xs-12" style="height:20px;"></div>
            </div>
            
            <hr/>
            
            <div class="row" id="general_links_panel">
                    
                <div class="col-sm-2"></div>
                <div class="col-sm-4" ng-controller="relatedActorsController">
                    <h2>Related Artists:</h2>        
                        <div ng-repeat="actor in associated_actors" style="width:50%;margin:0px;float:left;">
                            <a ng-href="/artist/{{ actor._id }}" target="_self" style="padding:0px;">
                                <img class="img-circle" ng-src="/event_images/{{ actor.loc_img_link }}" style="margin:0px auto;" height="100" width="50%">
                                <h5>{{ actor.stage_name }}</h5>
                            </a>
                        </div>
                </div>

                <div class="col-sm-4" ng-controller="recentEventsController">
                    <h2>Recent Events:</h2>
                        <div ng-repeat="event in events" style="width:50%;margin:0px;float:left;">
                            <a ng-href="/beef/{{event._id}}" target="_self" style="padding:0px;">
                                <img class="img-circle" ng-src="/event_images/{{event.loc_img_link}}" style="margin:0px auto;" height="100" width="50%">


                                <h5>{{ event.title }}</h5>
                                <h6>{{ event.aggressor_object[0].stage_name }}</h6>
                                Artists included: 
                                <ul>
                                    <li ng-repeat="target in event.targets">

                                        <p>{{ target.stage_name }}</p>

                                    </li>
                                </ul>

                            </a>
                        </div>
                </div>
                <div class="col-sm-2"></div>
            </div>
            <div id="bottom_bar" class="row" style="margin:50px 0px"></div>
        </div>
    </body>
</html>
